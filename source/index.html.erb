</script>

<script id="buddy-new-tmpl" type="text/template">
  <td class="new buddy buddy{{= _id }}" data-buddyId="{{= _id }}" >
    <input id="new-buddy-portion-{{= _id }}" class="portion-box" tabindex={{= order + 3 }} type='checkbox' checked/>
